<div class="field form-group">
  <div id="image_preview_container" class="position-relative pb-1" style="display:none; width: 300px;">
    <img id="image_preview" src="#" alt="Image preview"  class="img-thumbnail p-0" style="width: 300px;">

    <button type="button" class="btn btn-sm btn-outline-danger position-absolute m-1 rounded-circle" style="top: 0; right: 0" id="clear_image">
      X
    </button>
  </div>

  <%= label_tag :mine, "Avatar", for: "image_input" %>
  <%= form.file_field field, id: "image_input", class: "form-control" %>
</div>
